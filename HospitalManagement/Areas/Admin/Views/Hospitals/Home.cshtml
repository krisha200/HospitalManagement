<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewData["Title"] - HospitalManagement</title>
    <style>
        /* Your existing styles remain unchanged */
        /* Additional styles for enhanced UI */
        .hero-section {
            /* background-image: url('../../../../wwwroot/Images/hospital.jpg');
            background-size: cover;
            background-position: center; */
            color: black;
            text-align: center;
            padding: 100px 0;
        }

        .hero-image {
            right:0;
            width: 50%;
            height: 30%;
            object-fit: cover;
            
        }

            .hero-section h1 {
                font-size: 3.5rem;
                margin-bottom: 20px;
            }

            .hero-section p {
                font-size: 1.2rem;
                margin-bottom: 30px;
            }

            .hero-section .btn-primary {
                font-size: 1.2rem;
                padding: 12px 30px;
                border-radius: 30px;
                transition: all 0.3s ease;
                
            }

                .hero-section .btn-primary:hover {
                    transform: translateY(-5px);
                    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
                }

        .services-section {
            background-color: #f8f9fa;
            padding: 100px 0;
        }

        .service {
            text-align: center;
            margin-bottom: 50px;
            border: 1px solid black;
        }

            .service h3 {
                font-size: 2rem;
                margin: 40px 0 0 0;
            }

            .service p {
                font-size: 1.1rem;
                margin-top: 20px;
                margin-bottom: 40px;
            }

        .testimonial-section {
            background-color: #f8f9fa; /* Light gray background */
            color: #333; /* Dark text color */
            padding: 100px 0;
        }

            .testimonial-section h2 {
                font-size: 2.5rem;
                margin-bottom: 50px;
                color: #000; /* Black text color */
            }

        .testimonial-item {
            text-align: center;
            margin-bottom: 50px;
        }

        .testimonial-img {
            width: 180px; /* Adjust size as needed */
            height: 180px; /* Adjust size as needed */
            border-radius: 50%; /* Makes the image circular */
            margin-bottom: 20px;
        }

        .testimonial-text {
            font-size: 1.5rem;
            margin-bottom: 20px;
        }

        .testimonial-author {
            font-style: italic;
            font-size: 1.2rem;
        }

        .carousel-control-prev-icon,
        .carousel-control-next-icon {
            color: black; /* Change to the desired color */
        }
        .main_section{
            display: flex;
            margin-top: 40px;
        }
        .contact-form{
            width: 50%;
            margin-right: 20px;
        }
        
        .follow {
            color: #000;
            width: 50%;
        }

            .follow span {
                font-size: 20px;
                font-weight: bold;
            }

        .social-icons {
            margin-top: 10px;
        }

            .social-icons i {
                margin: 0 5px;
                font-size: 20px;
                color: #fff;
            }

        .follow p {
            margin-top: 20px;
            font-size: 12px;
        }

        .partners-section {
            background-color: #fff;
            padding: 70px 0;
        }

        .partners-title {
            font-size: 2.5rem;
            margin-bottom: 100px;
        }

        .partner-logo {
            display: inline-block;
            margin: 50px 20px;
        }

            .partner-logo img {
                max-width: 150px;
                height: auto;
            }

        .statistics-section {
            background-color: #FFFFFF; 
            color: #000; /* black */
            padding: 50px 0;
            text-align: center;
        }

        .statistic {
            display: inline-block;
            margin: 0 30px;
        }

            .statistic h2 {
                font-size: 4rem;
                margin-bottom: 10px;
            }

            .statistic p {
                font-size: 2rem;
            }

        label {
            display: block;
            margin-bottom: 5px;
        }

        input[type="text"],
        input[type="email"],
        textarea {
            width: 100%;
            padding: 10px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        textarea {
            resize: vertical;
        }
    </style>

</head>
